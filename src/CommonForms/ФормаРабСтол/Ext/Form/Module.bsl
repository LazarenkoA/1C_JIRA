&НаСервере
Функция ПолучитьЦвет(Процент)
	// 0% - это зеленый, т.е. GRB - 0, 255, 0
	// 50% - это желтый, т.е. GRB - 255, 255, 0
	// 100% - это красный, т.е. GRB - 255, 0, 0
	Если Процент <= 50 Тогда
		КоэфЗеленый = 1;
		КоэфКрасный = (Процент / 50);
	Иначе
		КоэфКрасный = 1;
		КоэфЗеленый = 1 - ((Процент - 50) / 50);
	КонецЕсли;
	
	Элементы.Реквизит1.Заголовок = Строка(Процент);
	Возврат Новый Цвет(255 * КоэфКрасный, 255 * КоэфЗеленый, 0);
